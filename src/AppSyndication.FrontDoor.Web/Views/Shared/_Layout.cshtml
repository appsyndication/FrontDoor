<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
@if (ViewBag.LinkTagId == null) {
    <link rel="feed" href="/tags/" />
} else {
    <link rel="package" href="/tag/@(ViewBag.LinkTagId)/" />
}
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/united/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/octicons/2.4.1/octicons.css" rel="stylesheet">
    <link href="/css/site.css" media="screen" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body lang="en">
    <div class="wrapper">
    <header class="navbar navbar-default navbar-fixed-top navbar-transparent" role="banner">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img alt="AppSyndication" src="/img/transparent-feed-icon-20x20.png"></a>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <nav class="navbar-collapse collapse" role="navigation">
          <ul class="nav navbar-nav">
            <li class="@(ViewBag.CurrentPage == "browse" ? "active" : null)"><a asp-controller="Apps">Browse</a></li>
            <li class="@(ViewBag.CurrentPage == "about" ? "active" : null)"><a asp-controller="Home" asp-action="About">About</a></li>
            @*<li class="@(ViewBag.CurrentPage == "pricing" ? "active" : null)"><a asp-controller="Pricing">Pricing</a></li>*@
            <li class="dropdown @(ViewBag.CurrentPage == "howto" ? "active" : null)">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">How To <strong class="caret"></strong></a>
              <ul class="dropdown-menu" role="menu">
                <li><a asp-controller="HowTo" asp-action="OneGet">How To: OneGet</a></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right ">
            <li class="hidden-xs">
              <a class="search-toggle" accesskey="s" data-target=".search-controls" data-focus-target="#search-text" aria-expanded="false" aria-controls=".search-controls">
                <i class="glyphicon glyphicon-search search-controls"></i>
                <i class="glyphicon glyphicon-remove-sign search-controls visible-xs"></i>
              </a>
            </li>

            <li class="hidden-xs"><a asp-controller="Account"><i class="glyphicon glyphicon-user"></i> @(this.User.Identity?.IsAuthenticated == true ? "robmen" : "Sign in")</a></li>
          </ul>

          <form class="search-controls navbar-form navbar-right visible-xs" action="/apps" role="search">
              <div class="input-group">
                <input id="search-text" class="form-control" name="q" type="text" placeholder="Search applications">
                <div class="input-group-btn">
                  <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                </div>
              </div>
          </form>
        </nav>
      </div>
    </header>
    @RenderBody()
    <div class="push-footer"></div>
    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <p>Footer goes here</p>
          </div>
        </div>
      </div>
    </footer>

    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="/js/site.js"></script>
  </body>
</html>
